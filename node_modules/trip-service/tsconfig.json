{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@libs/*": [
        "../../libs/*/src"
      ],
      "@common-types/*": [
        "../../libs/common-types/dist/*"
      ],
      "@libs/common-types": [
        "../../libs/common-types/dist/index.d.ts"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}